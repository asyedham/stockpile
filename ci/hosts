[instance]
# List of hosts which we want to gather information from
localhost ansible_connection=local

[kubernetes]
# List of hosts to kick off backpack on all associated nodes
localhost ansible_connection=local

[stockpile]
# The host stockpile is running from
localhost ansible_connection=local stockpile_user=root stockpile_output_path=/tmp/stockpile.json

[undercloud]
undercloud-0 ansible_host=undercloud_ip ansible_connection=ssh ansible_user=stack undercloud_user=stack container_cli=docker config_path=/var/lib/config-data/puppet-generated

