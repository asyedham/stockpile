[instance]
# List of hosts which we want to gather information from
localhost ansible_connection=local

[kubernetes]
# List of hosts to kick off backpack on all associated nodes
localhost ansible_connection=local

[stockpile]
# The host stockpile is running from
localhost ansible_connection=local
undercloud-0 ansible_host=<undercloud-ip> ansible_connection=ssh stockpile_user=stack

[undercloud]
undercloud-0 ansible_host=<undercloud_ip> ansible_connection=ssh ansible_user=stack

[undercloud:vars]
undercloud_user=stack
container_cli=docker
config_path=/var/lib/config-data/puppet-generated


[overcloud:vars]
overcloud_user=heat-admin
container_cli=docker
config_path=/var/lib/config-data/puppet-generated


[overcloud]
controller-0 ansible_host=<controller_ip>  ansible_connection=ssh overcloud_user=heat-admin
compute-0 ansible_host=<compute_ip>  ansible_connection=ssh overcloud_user=heat-admin

